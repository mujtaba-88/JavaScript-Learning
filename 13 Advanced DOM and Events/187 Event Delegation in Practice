// In event delegation we put the event listener on common parent that we are insterested in.
// Contain two step 1. Add event listener on common element 2. Determine what element originated the event.

document.querySelectorAll('.nav__link').addEventListener('click', function(e){
  console.log(e.target);

  // Matching Strategy
  if(e.target.classList.contains('nav__link')){
    const id = this.getAttribute("href"); 
    document.querySelector(id).scrollIntoView({behavior: 'smooth'});
  }
});
